/* Base styles */
body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen,
    Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    color: #24292e;
    line-height: 1.5;
}

/* Code styles */
code {
    font-family: SFMono-Regular, Consolas, Liberation Mono, Menlo, Courier,
    monospace;
    font-size: 85%;
    padding: 0.2em 0.4em;
    margin: 0 0.2em;
    background-color: #f6f8fa;
    border-radius: 6px;
}

/* Header styles */
h1, h2, h3 {
    color: #24292e;
}

h1 {
    font-size: 32px;
}

/* Link styles */
a {
    color: #e65100;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}

/* Other styles */
pre {
    background-color: #f6f8fa;
    border-radius: 3px;
    padding: 16px;
}

blockquote {
    border-left: 4px solid #dfe2e5;
    padding-left: 16px;
    margin: 16px 0;
}

body {
    margin: 0 auto;
    padding: 16px;
}

p {
    max-width: 800px;
}

header {
    background-color: #d9c052;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10px 20px;
    font-size: 120%;
    margin-bottom: 2em;
}

.logo img {
    width: 50px;
}

nav ul {
    list-style: none;
    display: flex;
}

nav ul li {
    margin-right: 20px;
}

nav ul li:last-child {
    margin-right: 0;
}

nav ul li a {
    text-decoration: none;
    color: #fff;
}

.user {
    display: flex;
    align-items: center;
    width: 100px;
}

.user img {
    width: 80px;
}

.login-btn {
    text-decoration: none;
    color: #fff;
}

/* Media query for smaller screens */
@media (max-width: 768px) {
    .logo img {
        width: 40px;
    }
}

.active a {
    border-bottom: 5px solid #555;
}

footer {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    text-align: center;
}

table {
    border-collapse: collapse;
}

th, td {
    padding: 10px;
    border: 1px solid black;
}
